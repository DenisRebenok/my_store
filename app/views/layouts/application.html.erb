<!DOCTYPE html>
<html>
<head>
  <title>MyStore</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

    <%=	 render partial: "shared/navbar" %>


    <div class="sessionInfo">
      <% if current_user %>
          Вы залогинены как <%= link_to(current_user.login, edit_user_registration_path) %> | <%= link_to "Выйти", destroy_user_session_path, :method => :delete %>
      <% else %>
          <%= link_to "Sign in", new_user_session_path %> | <%= link_to "Registration", new_user_registration_path %>
      <% end %>
    </div>

    <p style="color: red;"><%= flash[:error] %></p>
    <p style="color: green;"><%= flash[:success] %></p>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>

    <%=	 render partial: "shared/email" %>
</body>
</html>
