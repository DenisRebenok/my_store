<h1>Items</h1>

<table>
<thead>
    <tr>
        <th>Item id</th>
        <th>Name</th>
        <th>Price</th>
        <th>created_at</th>
        <th></th>
        <th>Рейтинг</th>
    </tr>
</thead>
<tbody>

<% @items.each do |i| %>

  <tr>
    <td><%= i.id %></td>
    <td>
      <%= link_to i.name, item_path(i) %>
    </td>
    <td><%= i.price %></td>
    <td><%= i.created_at %></td>

    <% if user_signed_in? %>
        <td><%= link_to "Delete", i , method: :delete, data: { confirm: "Точно удалить?" } %></td>
        <td>Рейтинг: <%= i.votes_count %>, <%= link_to "+", upvote_item_path(i) %></td>
    <% else %>
        <td></td>
        <td>Рейтинг: <%= i.votes_count %>
    <% end %>
  </tr>

<% end %>

</tbody>
</table>